@model IEnumerable<StreamOneInterface.Models.Entities.OrderRowStatus>

@{
    ViewBag.Title = "Item Status";
}


    <div class="well col-sm-10">
        <h2>Item statuses</h2>

        <p>
            @Html.ActionLink("Add new item status", "Create", null, new { @class = "btn btn-default" })
        </p>
            <table class="table table-striped table-hover table-condensed">
                <thead class="tableheader">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.RowStatus)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RowStatus)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
</div>
