@model IEnumerable<StreamOneInterface.Models.Entities.OrderRowStatus>

@{
    ViewBag.Title = "Item Status";
}


    <div class="well col-sm-10">
        <h2>Item statuses</h2>

        <p>
            @Html.ActionLink("Add new Item Status", "Create", null, new { @class = "btn btn-danger" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RowStatus)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RowStatus)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
