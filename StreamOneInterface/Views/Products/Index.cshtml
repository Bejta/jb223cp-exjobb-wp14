@model IEnumerable<StreamOneInterface.Models.Entities.Product>

@{
    ViewBag.Title = "Index";
}
<div class="well col-sm-10">
    <h2>List of products</h2>

    <p>
        @Html.ActionLink("Add new product", "Create", null, new { @class = "btn btn-default" })
    </p>
    <table class="table table-striped table-hover table-condensed">
        <thead class="tableheader">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ShareNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShareNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>