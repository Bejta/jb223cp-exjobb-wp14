@model IEnumerable<StreamOneInterface.Models.Entities.OrderStatus>

@{
    ViewBag.Title = "Index";
}
<div class="well col-sm-10">
    <h2>Order statuses</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-danger" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>