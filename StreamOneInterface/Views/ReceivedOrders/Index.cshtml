@model StreamOneInterface.ViewModels.ReceivedOrdersViewModel

@{
    ViewBag.Title = "Orders";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Status
        </th>
        <th>
           Type
        </th>
        <th>
            Stream One ID
        </th>
        <th>
            Listing ID
        </th>
        <th>
            Reseller
        </th>
        <th></th>
        <th></th>
        <th>
           Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Orders) {

    string selectedRow = "";
    if (item.Id == ViewBag.Id)
    {
        selectedRow = "selectedrow";
    }
    <tr class="@selectedRow">
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderType.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStreamOneID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reseller.Lastname) + " " + @Html.DisplayFor(modelItem => item.Reseller.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reseller.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reseller.Website)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @Html.ActionLink("Select", "Index", new { id = item.Id })
        </td>
    </tr>
}

</table>

@* Order Rows starts here  *@

@if (Model.OrderRows != null)
{
    <h3>Order rows of selected order</h3>
    <table>
        <tr>
            <th></th>
            <th>Item ID</th>
            <th>Status</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>


        @foreach (var item in Model.OrderRows)
        {
            string selectedRow = "";
            if (item.Id == ViewBag.Id)
            {
                selectedRow = "selectedrow";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Product details", "Index", new { orderrowID = item.Id })
                </td>
                <td>
                    @item.ItemID
                </td>
                <td>
                    @item.OrderRowStatus.RowStatus
                </td>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.UnitPrice
                </td>
            </tr>
        }
    </table>
}
